<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/customer-home.css">
    <title>Customer Home Page</title>
</head>

<body style="background-color: #fef9a8;">
<div class="giant"> 
<div class="p-5 xl-4 bg-danger text-white">FoodXpress
  <div class="small-nav-bar">
        <p class="text-white"><a href="./login" class="text-white">log In</a>&emsp;<a href="./contact-us" class="text-white">Contact Us</a></p>
  </div>
</div>
<div class="pt-5"></div>
<h1 class="display-6 pl-3">Featured Restaurants</h1>
<hr style="background-color:#CC9966"></hr>

<!-- carousel example -->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% for(var i=3; i <= Math.ceil(featuredRestaurants.length/3)*3; i+= 3) { %>
        <% if (i == 3) { %>
            <div class="carousel-item active">
          <%} else { %>
            <div class="carousel-item">
          <% } %>
        <div class="cards-wrapper">
            <% for(var j=i-3; j < featuredRestaurants.length && j < i; j++) { %>
              <div class="card d-none d-md-block">
                <img src="/images/indian-res2.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= featuredRestaurants[j].restaurant_name %></h5>
                  <p class="card-text">Cuisine: <%= featuredRestaurants[j].cuisine %></p>
                  <p class="card-text">Rating: <%= featuredRestaurants[j].rating %></p>
                  <p class="card-text">Distance: <%= featuredRestaurants[j].distance %> miles</p>
                  <a href="<%= '/restaurants/'+featuredRestaurants[j].restaurant_id %>" class="btn btn-primary">Visit Restaurant</a>
                </div>
              </div>
            <% } %>
        </div>
      </div>
      <% } %>
      </div>
      </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only"></span>
    </a>
  </div>
</div> 

</div>

<div class="pt-5"></div>

<h1 class="display-6 pl-3">All Restaurants</h1>
<hr style="background-color:#CC9966"></hr>

<div id="carouselExampleControlsAll" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% for(var i=3; i <= Math.ceil(allRestaurants.length/3)*3; i+= 3) { %>
        <% if (i == 3) { %>
            <div class="carousel-item active">
          <%} else { %>
            <div class="carousel-item">
          <% } %>
        <div class="cards-wrapper">
            <% for(var j=i-3; j < allRestaurants.length && j < i; j++) { %>
              <div class="card d-none d-md-block">
                <img src="/images/indian-res2.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= allRestaurants[j].restaurant_name %></h5>
                  <p class="card-text">Cuisine: <%= allRestaurants[j].cuisine %></p>
                  <p class="card-text">Rating: <%= allRestaurants[j].rating %></p>
                  <p class="card-text">Distance: <%= allRestaurants[j].distance %> miles</p>
                  <a href="<%= '/restaurants/'+allRestaurants[j].restaurant_id %>" class="btn btn-primary">Visit Restaurant</a>
                </div>
              </div>
            <% } %>
        </div>
      </div>
      <% } %>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControlsAll" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControlsAll" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only"></span>
    </a>
  </div>
</div> 

</div>
</body>

</html>